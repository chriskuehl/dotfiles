# commands
alias ls="ls --color"
alias grep="grep --color=auto"

if [[ $SHELL_PLATFORM == "osx" ]]; then
	alias ls="gls --color"
fi

if [[ $SHELL_PLATFORM == "solaris" ]]; then
	alias ls="gls --color"
fi
