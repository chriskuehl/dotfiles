# git
alias ga="git add -A"
alias gp="git push"
alias gl="git log"
alias gll="git log --pretty=fuller"
alias gs="git status"
alias gd="git diff"
alias gdc="git diff --cached"
alias gc="git commit -v"
alias gb="git branch -v"
alias gch="git checkout"
alias gpu="git pull"

# core utils
alias ls="ls -h --color"
alias ll="ls -l"
alias la="ls -lA"
alias grep="grep --color=auto"

# typos
alias l="ls"
alias sl="ls"
alias s="ls"
alias dc="cd"
alias d="cd"

if [[ $SHELL_PLATFORM == "solaris" ]]; then
	alias ls="gls -h --color"
	alias grep="ggrep --color"
	unalias ssh
fi

# functions
colors() {
	for i in {0..255} ; do
		printf "\x1b[38;5;${i}mcolour${i}\n"
	done
}
